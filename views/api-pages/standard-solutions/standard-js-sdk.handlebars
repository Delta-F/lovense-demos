                    <button onclick="switchPatternType('custom')" class="pattern-switch-btn active" id="customPatternBtn">Test Custom Pattern</button>
                    <button onclick="switchPatternType('preset')" class="pattern-switch-btn" id="presetPatternBtn">Test Preset Pattern</button>
                    <button onclick="switchPatternType('stop')" class="pattern-switch-btn" id="stopPatternBtn">Stop Toy Action</button>
                </div>

                <!-- Custom Pattern Container -->
