                        <div class="action-checkboxes">
                            <label class="action-checkbox">
                                <input type="checkbox" id="pattern-vibrate" checked>
                                <span>Vibrate</span>
                            </label>
                            <label class="action-checkbox">
                                <input type="checkbox" id="pattern-rotate">
                                <span>Rotate</span>
                            </label>
                            <label class="action-checkbox">
                                <input type="checkbox" id="pattern-pump">
                                <span>Pump</span>
                            </label>
                            <label class="action-checkbox">
                                <input type="checkbox" id="pattern-thrusting">
                                <span>Thrusting</span>
                            </label>
                            <label class="action-checkbox">
                                <input type="checkbox" id="pattern-fingering">
                                <span>Fingering</span>
                            </label>
                            <label class="action-checkbox">
                                <input type="checkbox" id="pattern-suction">
                                <span>Suction</span>
                            </label>
                        </div>
                        <div class="pattern-button">
                            <button onclick="testPattern()" class="primary-button">Test Pattern</button>
                        </div>
                    </div>
                </div>

                <!-- Preset Pattern Container -->
                <div id="presetPatternContainer" class="pattern-container" style="display: none;">
                    <div class="pattern-inputs">
                        <div class="pattern-params">
                            <div class="toy-id-group">
                                <label>Toy ID:</label>
                                <input type="text" id="preset-toy-id" class="form-control" placeholder="e.g., ff922f7fd345">
                            </div>
                            <div class="toy-id-group">
                                <label>Time (seconds):</label>
                                <input type="number" id="preset-time" class="form-control" placeholder="0 for indefinite">
                            </div>
                        </div>
                        <div class="preset-buttons">
                            <button onclick="testPresetPattern('pulse')" class="primary-button">Pulse</button>
                            <button onclick="testPresetPattern('wave')" class="primary-button">Wave</button>
                            <button onclick="testPresetPattern('fireworks')" class="primary-button">Fireworks</button>
                            <button onclick="testPresetPattern('earthquake')" class="primary-button">Earthquake</button>
                        </div>
                    </div>
                </div>

                <!-- Stop Toy Action Container -->
                <div id="stopActionContainer" class="pattern-container" style="display: none;">
                    <div class="pattern-inputs">
                        <div class="pattern-params">
                            <div class="toy-id-group">
                                <label>Toy ID:</label>
                                <input type="text" id="stop-toy-id" class="form-control" placeholder="e.g., ff922f7fd345">
                            </div>
                        </div>
                        <div class="preset-buttons">
                            <button onclick="stopToyAction()" class="primary-button">Stop Toy Action</button>
                        </div>
                    </div>
                </div>
            </div>

            <div class="api-test-results">
                <div class="request-box">
                    <h4>Request:</h4>
                    <div class="request-url">URL: basicSdkInstance.sendPatternCommand()</div>
                    <div class="timestamp" id="patternRequestTime">Timestamp: -</div>
                    <div id="patternRequest">Request will appear here...</div>
                </div>
                <div class="response-box">
                    <h4>Response:</h4>
                    <div class="timestamp" id="patternResponseTime">Timestamp: -</div>
                    <div id="patternResponse">Response will appear here...</div>
                </div>
            </div>
        </section>
    </div>
</div>

