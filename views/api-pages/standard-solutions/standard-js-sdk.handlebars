                            </div>
                            <div class="toy-id-group">
                                <label>Time (seconds):</label>
                                <input type="number" id="pattern-time" class="form-control" value="60">
                            </div>
                            <div class="toy-id-group">
                                <label>Interval (ms):</label>
                                <input type="number" id="pattern-interval" class="form-control" value="150">
                            </div>
                        </div>
                        <div class="toy-id-group pattern-strength-input">
                            <label>Pattern Strength:</label>
                            <input type="text" id="pattern-strength" class="form-control" 
                                placeholder="e.g., 6;8;10;12;14;20;20;20;16;14">
                        </div>
                    </div>
