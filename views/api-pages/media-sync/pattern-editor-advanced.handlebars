// Step 3: Advanced Initialization & Media
async function advancedInit() {
    if (!lovensePattern) {
        setResponse('advancedInitResponse', 'Error: Please initialize the Pattern SDK first');
        return;
    }
    if (!currentCToken) {
        setResponse('advancedInitResponse', 'Error: Please get a CToken first');
