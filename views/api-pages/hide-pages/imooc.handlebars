    <script>
        let globalWeekCounter = 1;
        let sectionCounter = 1;

        // Initialize all collapsible elements
        document.addEventListener('DOMContentLoaded', () => {
            // Initialize phases
            document.querySelectorAll('.course-phase').forEach(phase => {
                const header = phase.querySelector('.course-phase-header') || document.createElement('div');
                const title = phase.querySelector('.course-phase-title');
                const content = phase.querySelector('.course-phase-content') || document.createElement('div');
                
                if (!header.className.includes('course-phase-header')) {
                    header.className = 'course-phase-header';
                    content.className = 'course-phase-content collapsed';
                    
                    // Move all content except the title into content div
                    const children = Array.from(phase.children);
                    children.forEach(child => {
                        if (child !== title && child !== header && child !== content) {
                            content.appendChild(child);
                        }
                    });
                    
                    if (title && !header.contains(title)) {
                        header.appendChild(title);
                    }
                    
                    // Clear the phase and rebuild it
                    phase.innerHTML = '';
                    phase.appendChild(header);
                    phase.appendChild(content);
                }
                
                // Ensure click handler is attached
                header.addEventListener('click', (e) => {
                    // Prevent the click from propagating to nested elements
                    e.stopPropagation();
                    if (title) title.classList.toggle('collapsed');
                    content.classList.toggle('collapsed');
                });
            });

            // Initialize sections
            document.querySelectorAll('.section-title').forEach(title => {
                title.classList.add('collapsed');
                title.addEventListener('click', (e) => {
                    // Prevent the click from propagating to parent elements
                    e.stopPropagation();
                    e.preventDefault();
                    
                    title.classList.toggle('collapsed');
                    const section = title.closest('.course-section');
                    const weekContainers = section.querySelectorAll('.week-container');
                    
                    weekContainers.forEach(container => {
                        const weekContent = container.querySelector('.week-content');
                        const weekTitle = container.querySelector('.week-title');
                        if (title.classList.contains('collapsed')) {
                            weekContent.classList.add('collapsed');
                            weekTitle.classList.add('collapsed');
                        } else {
                            weekContent.classList.remove('collapsed');
                            weekTitle.classList.remove('collapsed');
                        }
                    });
                });
            });

            // Initialize topic lists as collapsed
            document.querySelectorAll('.topic-list').forEach(list => {
                list.classList.add('collapsed');
            });
        });

        // Function to organize topics into weeks based on practice assignments
        function organizeIntoWeeks(topicList) {
            const topics = Array.from(topicList.children);
            const weekContainer = document.createElement('div');
            weekContainer.className = 'weeks-wrapper';
            let currentWeekTopics = [];
            let weekGroups = [];
            
            // Group topics into weeks based on practice assignments
            topics.forEach((topic) => {
                currentWeekTopics.push(topic);
                if (topic.textContent.includes('实践作业')) {
                    weekGroups.push([...currentWeekTopics]);
                    currentWeekTopics = [];
                }
            });
            
            // If there are remaining topics without a practice assignment, add them as the last week
            if (currentWeekTopics.length > 0) {
                weekGroups.push(currentWeekTopics);
            }
            
            // Create week containers
            weekGroups.forEach((weekTopics) => {
                const weekDiv = document.createElement('div');
                weekDiv.className = 'week-container';
                
                const weekTitle = document.createElement('div');
                weekTitle.className = 'week-title collapsed';
                weekTitle.textContent = `第${globalWeekCounter}.${sectionCounter}周`;
                
                sectionCounter++;
                if (sectionCounter > 2) {
                    sectionCounter = 1;
                    globalWeekCounter++;
                }
                
                const weekContent = document.createElement('div');
                weekContent.className = 'week-content collapsed';
                
                weekTopics.forEach(topic => weekContent.appendChild(topic.cloneNode(true)));
                
                weekDiv.appendChild(weekTitle);
                weekDiv.appendChild(weekContent);
                weekContainer.appendChild(weekDiv);

                weekTitle.addEventListener('click', (e) => {
                    e.stopPropagation(); // Prevent event from bubbling up
                    e.preventDefault();
                    weekTitle.classList.toggle('collapsed');
                    weekContent.classList.toggle('collapsed');
                });
            });
            
            topicList.replaceWith(weekContainer);
        }

        function initializeWeeks() {
            globalWeekCounter = 1; // Reset counter before reorganizing
            sectionCounter = 1;    // Reset section counter
            document.querySelectorAll('.topic-list').forEach(list => {
                organizeIntoWeeks(list);
            });
        }

        // Control buttons functionality
        document.getElementById('expandAll').addEventListener('click', () => {
            document.querySelectorAll('.collapsed').forEach(elem => {
                elem.classList.remove('collapsed');
            });
        });

        document.getElementById('collapseAll').addEventListener('click', () => {
            document.querySelectorAll('.course-phase-content, .topic-list, .week-content, .section-title, .week-title, .course-phase-title').forEach(elem => {
                elem.classList.add('collapsed');
            });
        });

        // Remove the week size selector since we're now using practice assignments as delimiters
        const weekSizeSelect = document.getElementById('weekSizeSelect');
        if (weekSizeSelect) {
            weekSizeSelect.remove();
        }

        // Initialize weeks
        initializeWeeks();
    </script>
